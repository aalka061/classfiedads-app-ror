<div class="container list-container">


       
    </div>
    <br>
    <%@ads.each do |ad|%>
            <a href="#" class="card-block clearfix">
                <div class="container">
                    <div class="card flex-row flex-wrap">
                        <div class="card-header card-center border-0">
                            <% if ad.image.attached?%>
                                 <%=image_tag(ad.image, size: "200x200")%>
                            <%else%>
                                <%=image_tag("//placehold.it/200")%>
                            <%end%>
                        </div>
                        <div class="card-body" style="width: 50rem">
                            <div class="row">
                                <div class="col-md-10">
                                      <h4 class="card-title"> <%=ad.title%></h4>
                                </div>
                                 <div class="col-md-2">
                                      <h4 class="card-text text-warning"> $<%=ad.price%></h4>
                                </div>
                               

                            </div>
                            <p class="text-info mata-ad-info">  <%=ad.location%> | <%=ad.created_at.strftime("%Y-%m-%d")%></p>
                            
                            <div class="card-text text-dark"><%=ad.description%></div>
                            <div class="delete-button">
                              <%=link_to "Delete", ad_path(ad), method: :delete, :class=>"btn btn-primary", 
                                                                                :data => {:confirm => "You Sure?"}%>
                            <%=link_to "Edit", edit_ad_path(ad), :class => "btn btn-primary"%>
                                                                    
                            </div>
                           

                        </div>
                        <div class="card-footer w-100 text-muted">
                          
                           
                        

                        </div>

                    </div>
                </div>
            </a>
            


    <%end%>

</div>
